!/usr/bin/env bash

# This script configures the Nginx server to listen on port 80

# Remove the default Nginx server configuration file
rm /etc/nginx/sites-enabled/default

#Create a symbolic link to the default Nginx server configuration file
#This will make Nginx listen on port 80 for all IPv4 addresses
ln -s /etc/nginx/sites-available/default /etc/nginx/sites-enabled/default

#Restart the Nginx service to apply the changes
service nginx restart

